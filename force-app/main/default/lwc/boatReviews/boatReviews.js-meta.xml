<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <description>Displays reviews.</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>        
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default,lightning__AppPage,lightning__FlowScreen">
            <property type="String" name="recordId" label="Review Id" description="Boat review Id to display reviews for"/>
            <property type="String" name="reviewDisplayType" label="Review type" description="The type of reviews to display." 
                      datasource="Detailed,Summary,Action" default="Summary" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>